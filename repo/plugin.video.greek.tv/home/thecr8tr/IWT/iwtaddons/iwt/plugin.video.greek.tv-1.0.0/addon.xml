<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.greek.tv" name="Greek TV" version="1.0.0" provider-name="IWT">
	<requires>
		<import addon="xbmc.addon" version="12.0.0"/>
		<import addon="xbmc.json" version="6.0.0"/>
		<import addon="xbmc.python" version="2.1.0"/>
		<import addon="script.module.simplejson" version="2.0.10"/>
		<import addon="script.module.parsedom" version="0.9.1"/>
		<import addon="plugin.video.youtube" version="2.9.2"/>
	</requires>
	<extension point="xbmc.python.pluginsource" library="default.py">
		<provides>video</provides>
	</extension>
	<extension point="xbmc.service" library="service.py" start="startup">
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Live TV from Greece.</summary>
		<description lang="en">Watch your favourite television networks from Greece.</description>
		<disclaimer lang="en">Τhis addon offers live video content available in Greece.</disclaimer>
		<platform>all</platform>
	</extension>
</addon>
